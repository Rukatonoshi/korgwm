#!/bin/sh
# vim: cc=119 :

# Change to english
# https://github.com/grwlf/xkb-switch
xkb-switch -s us

# Configure XSecureLock
XSECURELOCK_AUTH=/.../auth_korgwm.pl
XSECURELOCK_DISCARD_FIRST_KEYPRESS=0
XSECURELOCK_LIST_VIDEOS_COMMAND=/.../lockscreen_fhd.mp4
XSECURELOCK_SAVER=/.../saver_korgwm.sh
XSECURELOCK_BLANK_DPMS_STATE=on
XSECURELOCK_BLANK_TIMEOUT=-1
export XSECURELOCK_AUTH XSECURELOCK_DISCARD_FIRST_KEYPRESS XSECURELOCK_LIST_VIDEOS_COMMAND XSECURELOCK_SAVER \
    XSECURELOCK_BLANK_DPMS_STATE XSECURELOCK_BLANK_TIMEOUT

exec xsecurelock
